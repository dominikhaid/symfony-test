{% extends 'layouts/content.html.twig' %}
{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('croppie') }}
{% endblock %}
{% block javascripts %}
	{{ parent() }}
	{{ encore_entry_script_tags('team') }}
	{{ encore_entry_script_tags('croppie') }}
{% endblock %}
{% block title %}Admin Edit Team Member
{% endblock %}
{% block content %}

	<div class="logo-headline d-flex mt-5 mb-3 align-self-center">
		<div class="img m-2 d-flex flex-wrap  align-self-center">
			{{ source('svg/brand-logo.svg') }}
		</div>
		<div class="w-75 h-100 d-flex align-self-end">
			<h1 class="m-0">Team Profil -
				{{ member.firstName }}
				{{ member.lastName }}</h1>
		</div>
	</div>

	{% for flashError in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flashError }}</div>
	{% endfor %}

	{{ form_start(teamForm) }}
	<div class="container">
		<div class="row row-cols-1 row-cols-sm-2 my-3">
			<div style='width:max-content;' class="col px-3 border-md-end">
				<picture id="avatar">
					<img src="/images/dynamic/team/avatar.jpg" style=" max-width:300px" class="img-fluid img-thumbnail team card-img-top" alt="avatar">
				</picture>
			</div>
			<div class="col px-3">
				<div style="max-width:500px;" class="row">
					<div class="input-group  mb-3">
						{{ form_label(teamForm.firstName) }}
						{{ form_widget(teamForm.firstName) }}
					</div>
					<div class="input-group mb-3">
						{{ form_label(teamForm.lastName) }}
						{{ form_widget(teamForm.lastName) }}
					</div>
					<div class="input-group mb-3">
						{{ form_label(teamForm.email) }}
						{{ form_widget(teamForm.email) }}
					</div>
					<div class="input-group mb-3">
						{{ form_label(teamForm.department) }}
						{{ form_widget(teamForm.department) }}
					</div>
					<div id="drag-tool-tip" class="input-group mb-3">
						{{ form_label(teamForm.photo) }}
						{{ form_widget(teamForm.photo) }}
					</div>
					<div class="input-group">
						{{ form_label(teamForm.description) }}
						{{ form_widget(teamForm.description) }}
					</div>
					<button type="submit" class="mt-3 btn btn-success">Save</button>
				</div>
			</div>
		</div>
	</div>

	{{ form_end(teamForm) }}

	{{ include('components/croppie.html.twig') }}

{% endblock %}
