{% block top_nav %}
	<nav class="navbar navbar-expand-lg navbar-dark bg-primary flex flex-column w-100 flex-wrap px-5">
		<div class="container-fluid">
			<a class="navbar-brand" href="#">Navbar</a>
			<div class="collapse navbar-collapse" id="navbarSupportedContent">
				<ul class="navbar-nav me-auto mb-2 mb-lg-0">
					{% set items = include("json/main_nav.json")  | json_decode %}
					{% for item in items %}
						{% if not item.submenu or item.submenu | length == 0 %}
							<li class="nav-item">
								<a class="nav-link active" href="{{item.href}}">{{item.title}}</a>
							</li>

						{% elseif item.submenu and item.submenu | length > 0 %}
							<li class="nav-item dropdown">
								<a class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false" href="{{item.href}}">{{item.title}}</a>
								<ul class="dropdown-menu" aria-labelledby="navbarDropdown">
									{% for sub in item.submenu %}
										<li>
											<a class="dropdown-item" href="{{sub.href}}">{{sub.title}}</a>
										</li>
									{% endfor %}
								</ul>
							{% endif %}
						</li>
					{% endfor %}
				</ul>
			</div>
		</div>
	</nav>
{% endblock %}
